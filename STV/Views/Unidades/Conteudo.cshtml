@model STV.ViewModels.UnidadeVM

<h3> Conteúdo - @Html.DisplayFor(item => item.Titulo)</h3>
<hr />
<div class="pull-right">
    <a href="javascript:void(0);" onclick='$("#ConteudoUnidade").empty(); $("#" + trSelecionada).removeClass("info");' class="btn btn-default">Fechar</a>
</div>

<h4>Materiais</h4>

<p>
    @Html.ActionLink("Adicionar", "Create", "Materiais", new { Idunidade = Model.Idunidade }, new { @class = "btn-sm btn-success" })
</p>

<table class="table table-striped">
    <thead>
        <th>
            @Html.DisplayNameFor(model => model.Materiais.FirstOrDefault().Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Materiais.FirstOrDefault().Tipo)
        </th>
        <th></th>
    </thead>

    <tbody>
        @foreach (var item in Model.Materiais)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Descricao, "Details", "Materiais", new { id = item.Idmaterial }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Materiais", new { id = item.Idmaterial })" class="btn-sm btn-primary btn-alterar" data-toggle="tooltip" title="Alterar">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Materiais", new { id = item.Idmaterial })" class="btn-sm btn-primary btn-excluir" data-toggle="tooltip" title="Excluir">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h4>Atividades</h4>

<p>
    @Html.ActionLink("Adicionar", "Create", "Atividades", new { idUnidade = Model.Idunidade }, new { @class = "btn-sm btn-success" })
</p>

<table class="table table-striped">

    <thead>
        <th>Descrição</th>
        <th>Status</th>
        <th>
            @if (!User.IsInRole("Admin") && !Model.IsInstutor)
            {
                @Html.Raw("Realizado")
            }
        </th>
        <th></th>
    </thead>

    <tbody>
        @foreach (var item in Model.AtividadesVM)
        {
            bool encerrada = item.DataEncerramento < DateTime.Now;
            bool aberta = item.DataAbertura < DateTime.Now;
            <tr>
                <td>
                    @Html.ActionLink(item.Descricao, "Details", "Atividades", new { id = item.Idatividade }, null)
                </td>

                <td>
                    @if (!encerrada && aberta)
                {
                        @Html.Raw("Encerra em ") @Html.DisplayFor(modelItem => item.DataEncerramento)
                    }
                    else
                    {
                        if (!aberta)
                        {
                            @Html.Raw("Inicia em ") @Html.DisplayFor(modelItem => item.DataAbertura)
                        }
                        else
                        {
                            @Html.Raw("Encerrada");
                    }
                }
                </td>
                <td>
                    @if (User.IsInRole("Default") && item.DataAbertura <= DateTime.Now && !Model.IsInstutor)
                    {
                        @Html.DisplayFor(modelItem => item.Realizado) @Html.Raw("%")
                    }
                </td>

                @if (User.IsInRole("Default") && !Model.IsInstutor)
                {
                    if (item.IsFinalizada)
                    {
                    <td class="success">
                        @Html.Raw("Atividade Finalizada")
                    </td>
                    }
                    else
                    {
                        if (!encerrada && aberta)
                        {
                            <td>
                                <a href="@Url.Action("Responder", "Atividades", new { id = item.Idatividade })" class="btn-sm btn-primary grid-control" data-toggle="tooltip" title="Responder">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("Finalizar", "Atividades", new { id = item.Idatividade })" class="btn-sm btn-primary grid-control" data-toggle="tooltip" title="Finalizar">
                                    <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
                                </a>
                            </td>
                        }
                        else
                        {
                            if (aberta)
                            {
                                if (item.Realizado < 100)
                                {
                                <td class="danger">
                                    <a href="@Url.Action("Revisao", "Atividades", new { id = item.Idatividade })" class="btn-sm btn-primary grid-control" data-toggle="tooltip" title="Finalizar">
                                        <span class="glyphicon glyphicon-tasks" aria-hidden="true"></span>
                                    </a>   
                                </td>
                                }
                                else
                                {
                                <td class="success">
                                    <a href="@Url.Action("Revisao", "Atividades", new { id = item.Idatividade })" class="btn-sm btn-primary grid-control" data-toggle="tooltip" title="Finalizar">
                                        <span class="glyphicon glyphicon-tasks" aria-hidden="true"></span>
                                    </a>   
                                </td>
                                }
                            }
                        }
                    }
                }
                @if (User.IsInRole("Admin") || Model.IsInstutor)
                {
                    if (!encerrada)
                    {
                        <td>
                            <a href="@Url.Action("Edit", "Atividades", new { id = item.Idatividade })" class="btn-sm btn-primary btn-alterar" data-toggle="tooltip" title="Alterar">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "Atividades", new { id = item.Idatividade })" class="btn-sm btn-danger btn-excluir" data-toggle="tooltip" title="Excluir">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>
                        </td>
                    }
                }
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Default") && !Model.IsInstutor)
{
    <h4>Notas</h4>
    <p>
        @Html.ActionLink("Visualizar Notas", "MinhasNotas", "Notas", new { Idunidade = Model.Idunidade }, new { @class = "btn btn-success" })
    </p>
}

