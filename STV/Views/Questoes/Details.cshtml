@model STV.Models.Questao

@{
    ViewBag.Title = "Details";
}

<ol class="breadcrumb">
    <li><a href="~/Cursos/Details/@Model.Atividade.Unidade.Curso.Idcurso">@Model.Atividade.Unidade.Curso.Titulo</a></li>
    <li><a href="~/Cursos/Details/@Model.Atividade.Unidade.Curso.Idcurso?Idunidade=@Model.Atividade.Unidade.Idunidade">@Model.Atividade.Unidade.Titulo</a></li>
    <li><a href="~/Atividades/Details/@Model.Atividade.Idatividade">@Model.Atividade.Descricao</a></li>
    <li class="active">Detalhes da Questão</li>
</ol>

<h2>Details</h2>

<div>
    <h4>Questão</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Atividade")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Atividade.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Alterar", "Edit", new { id = Model.Idquestao }) |
    <a href="@Url.Action("Index")" class="btn btn-default " data-toggle="tooltip" data-placement="auto" title="Voltar para Listagem">Voltar</a>
</p>
