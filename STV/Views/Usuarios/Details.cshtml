@model STV.ViewModels.UsuarioVM

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cpf)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Senha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Senha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Roles)
        </dt>

        <dd>
            @{
                var tamanho = Model.Roles.Count();

                for (var i = 0; i < tamanho; i++)
                {
                @Model.Roles.ElementAtOrDefault(i).Nome 
                    if (i < tamanho - 1)
                    {
                        @Html.Raw(",");
                    }

                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Medalhas)
        </dt>

        <dd>
            @{
                tamanho = Model.Medalhas.Count();

                for (var i = 0; i < tamanho; i++)
                {
                    @Model.Medalhas.ElementAtOrDefault(i).Descricao
                    if (i < tamanho - 1)
                    {
                        @Html.Raw(",");
                    }

                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Stamp)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stamp)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Alterar", "Edit", new { id = Model.Idusuario }) |
    <a href="@Url.Action("Index")" class="btn btn-default grid-control" data-toggle="tooltip" title="Voltar para Listagem">Voltar</a>|
    @Html.ActionLink("Print", "PDF",new { id = Model.Idusuario }, new { target = "_blank" })
</p>
