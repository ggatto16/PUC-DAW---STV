@model STV.ViewModels.UsuarioVM

@{
    ViewBag.Title = "Usuário";
}

<h2>Usuário</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cpf)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Roles)
        </dt>

        <dd>
            @{
                var tamanho = Model.Roles.Count();

                for (var i = 0; i < tamanho; i++)
                {
                    var role = Model.Roles.ElementAtOrDefault(i); 
                    if (role.Nome == "Admin")
                    {
                        @Html.Raw("Administrador")
                    }
                    else if (role.Nome == "Default")
                    {
                        @Html.Raw("Padrão")
                    }
                    else
                    {
                        @Html.Raw(role.Nome)
                    }

                    if (i < tamanho - 1)
                    {
                        @Html.Raw(",");
                    }

                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Medalhas)
        </dt>

        <dd>
            @{
                tamanho = Model.Medalhas.Count();

                if (tamanho == 0)
                {
                    <span class="glyphicon glyphicon-thumbs-down"></span> @Html.Raw("Nenhuma")
                }

                for (var i = 0; i < tamanho; i++)
                {
                    @Model.Medalhas.ElementAtOrDefault(i).Descricao
                    if (i < tamanho - 1)
                    {
                        @Html.Raw(",");
                    }

                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Stamp)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stamp)
        </dd>

    </dl>
</div>
<div class="form-group">
    <div class="col-md-12">
        <a href="@Url.Action("Edit", new { id = Model.Idusuario })" class="btn btn-primary">Alterar</a>
        <a href="@Url.Action("Relatorio", new { id = Model.Idusuario })" class="btn btn-info" data-toggle="tooltip" data-placement="auto" title="Emitir Relatório" target="_blank">Relatório</a>
        <a href="@Url.Action("Index")" class="btn btn-default" data-toggle="tooltip" data-placement="auto" title="Voltar para Listagem">Voltar</a>
    </div>
</div>
