@model IEnumerable<STV.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar", "Create", null, new { @class = "btn btn-success" })
</p>

@using (Ajax.BeginForm("Index", new AjaxOptions { HttpMethod = "Get", OnBegin = "onBeginAjax", OnComplete = "onCompleteAjax", OnFailure = "OnFailure" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Informe o CPF: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Cpf", ViewBag.FiltroCPF as string, new { @class = "form-control", @placeholder = "CPF" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Ou o nome: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Nome", ViewBag.FiltroNome as string, new { @class = "form-control", @placeholder = "Nome" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <input type="submit" value="Filtrar" class="btn btn-warning" />
                <input type="button" value="Limpar" onclick="location.href='@Url.Action("Index", "Usuarios")'" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<table class="table table-striped">
    @if (Model.Count() == 0)
    {
        <tr>
            <td align="center">Nenhum Registro</td>
        </tr>
    }
    else
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Cpf, "Details", new { id = item.Idusuario })
                </td>
                <td>
                    @Html.ActionLink(item.Nome, "Details", new { id = item.Idusuario })
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Idusuario })" class="btn-sm btn-primary grid-control" data-toggle="tooltip" title="Alterar">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.Idusuario })" class="btn-sm btn-danger grid-control" data-toggle="tooltip" title="Excluir">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Relatorio", new { id = item.Idusuario })" class="btn-sm btn-info grid-control" data-toggle="tooltip" title="Emitir Relatório" target="_blank">
                        <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }
    }
</table>
