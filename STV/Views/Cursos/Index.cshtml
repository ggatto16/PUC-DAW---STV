@model IEnumerable<STV.Models.Curso>

@{
    ViewBag.Title = "Cursos";
}

<h2>Cursos</h2>

<p>
    @Html.ActionLink("Adicionar", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped">
    @if (Model.Count() == 0)
    {
        <tr>
            <td align="center">Nenhum Registro</td>
        </tr>
    }
    else
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Encerrado)
            </th>
            <th></th>
            <th></th>
        </tr>

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Titulo, "Details", new { id = item.Idcurso })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Encerrado)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Idcurso })" class="btn-sm btn-primary btn-alterar" data-toggle="tooltip" data-placement="auto" title="Alterar">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", new { id = item.Idcurso })" class="btn-sm btn-danger btn-excluir" data-toggle="tooltip" data-placement="auto" title="Excluir">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }
    }
</table>
