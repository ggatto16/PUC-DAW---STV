@model IEnumerable<STV.Models.Curso>

@{
    ViewBag.Title = "Meus Cursos";
}

<h2>Meus Cursos</h2>

<table class="table table-striped">
@if (Model.Count() == 0)
{
    <tr>
        <td align="center">Nenhum Registro</td>
    </tr>
}
else
{
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Encerrado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Palavraschave)
        </th>
    </tr>


    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Titulo, "Details", new { id = item.Idcurso })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Encerrado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Palavraschave)
            </td>
        </tr>
    }
}
</table>



