@model IEnumerable<STV.Models.Curso>

@{
    ViewBag.Title = "Cursos Disponíveis";
}

<h2>Cursos Disponíveis</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Palavraschave)
        </th>
        <th></th>
    </tr>

    @{var cssLinha = string.Empty; }

    @foreach (var item in Model)
    {

        if (item.Usuarios.Where(u => u.Idusuario == ViewBag.Idusuario).FirstOrDefault() != null)
        {
            cssLinha = "success";
        }
        else
        {
            cssLinha = string.Empty;
        }

        <tr class="@cssLinha">
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Palavraschave)
            </td>
            <td>
                @if (ViewBag.Gerenciar == true)
                {
                    @Html.ActionLink("Gerenciar", "Details", "Cursos", new { id = item.Idcurso }, null);
                }
                else
                {

                    if (cssLinha != "success")
                    {
                        @Html.ActionLink("Inscrever-se", "Inscrever", new { Idcurso = item.Idcurso });
                    }
                    else
                    {
                        <p>Já está inscrito!</p>
                    }
                }
            </td>

        </tr>
    }

</table>
