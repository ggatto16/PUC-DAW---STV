@model STV.ViewModels.MaterialVM

@section MeusEstilos {
    @Styles.Render("~/Content/fileinput")
}

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="text-danger" id="divErroArquivo"></div>

@using (Ajax.BeginForm("Create", new AjaxOptions { HttpMethod = "Post", OnBegin = "onBeginAjax", OnComplete = "onCompleteAjax", OnFailure = "OnFailure", OnSuccess = "MaterialSalvo", InsertionMode = InsertionMode.Replace, UpdateTargetId = "containerUpload" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-6">

        <div class="form-horizontal">
            <h4>Material</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Idmaterial)
            @Html.HiddenFor(model => model.Idunidade)

            <div class="form-group">
                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.Tipo, null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div id="containerURL"></div>
            </div>

            @if (Model.Arquivo != null)
            {
                <div id="arquivo" class="form-group">
                    @Html.LabelFor(model => model.Arquivo.Nome, "Idarquivo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.ActionLink(Model.Arquivo.Nome, "Index", "Arquivos", new { id = Model.Arquivo.Idmaterial }, new { target = "_blank" })
                        @Ajax.ActionLink("Excluir", "ExcluirArquivo", "Materiais", new { id = Model.Arquivo.Idmaterial }, new AjaxOptions { HttpMethod = "Delete", OnSuccess = "RemoverArquivo();", OnFailure = "MostrarMensagem('Algo deu errado!', 2);", OnBegin = "onBeginAjax", OnComplete = "onCompleteAjax" }, null)

                    </div>
                </div>
            }

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>


        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>

    <div class="col-md-6">
        <div id="container"></div>
    </div>

}

<div class="col-md-6">
    <div id="containerUpload"></div>
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/fileinputSetup")

    <script>

        $(function () {
            $('#Tipo').change(function () {
                var tipoID = $(this).val();
                if (tipoID != 1 && tipoID != 2 && tipoID != 4) {
                    $.ajax({
                        url: '/Materiais/CarregarTipo',
                        type: 'GET',
                        data: { Idtipo: tipoID, URL: "@Html.Raw(Model.URL)" },
                        cache: false,
                        success: function (result) {
                            $('#containerURL').html(result);
                            PrepararFileUpload(tipoID);
                        }
                    });
                }
            });
        });

        $(document).ready(function () {
            $("select[id^='Tipo']").change();
        });

        function RemoverArquivo() {
            $('#arquivo').remove();
            $('#Tipo').val('0');
            MostrarMensagem('Arquivo excluído!', 1);
        };

        function MaterialSalvo() {
            var tipo = $('#Tipo').val();
            if (tipo == 3 || tipo == 5) {
                var url = '@Url.Action("Details", "Cursos", new { id = Model.Idcurso, Idunidade = Model.Idunidade })';
                window.location.href = url;
            }
        }

    </script>

}
