@model STV.Models.Material

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="text-danger" id="divErroArquivo"></div>

@using (Html.BeginForm("Edit", "Materiais", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-6">

        <div class="form-horizontal">
            <h4>Material</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Idmaterial)

            <div class="form-group">
                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.Tipo, null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Idunidade, "Idunidade", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Idunidade", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Idunidade, "", new { @class = "text-danger" })
                </div>
            </div>

            @if (Model.Arquivo != null)
            {
                <div id="arquivo" class="form-group">
                    @Html.LabelFor(model => model.Arquivo.Nome, "Idarquivo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.ActionLink(Model.Arquivo.Nome, "Index", "Arquivos", new { id = Model.Arquivo.Idmaterial }, new { target = "_blank" })
                        @Ajax.ActionLink("Excluir", "ExcluirArquivo", "Materiais", new { id = Model.Arquivo.Idmaterial }, new AjaxOptions { HttpMethod = "Delete", OnSuccess = "RemoverArquivo();", OnFailure = "$('#divErroArquivo').text('Algo deu errado');" }, null)

                    </div>
                </div>
            }

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>


        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>

    <div class="col-md-6">
        <div id="container"></div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function () {
            $('#Tipo').change(function () {
                var tipoID = $(this).val();
                $.ajax({
                    url: '@Url.Action("CarregarTipo", "Materiais")',
                    type: 'GET',
                    data: { Idtipo: tipoID },
                    cache: false,
                    success: function (result) {
                        $('#container').html(result);
                        PrepararFileUpload();
                    }
                });
            });
        });

        function RemoverArquivo() {
            $('#arquivo').remove();
            $('#Tipo').val('0');
        };

        function PrepararFileUpload() {
            $("#Arquivo").fileinput({
                language: 'pt-BR',
                maxFileCount: 1,
                showUpload: false,
                showCaption: false,
                browseClass: "btn btn-primary btn-lg",
                fileType: "any",

            });
        }

    </script>

}
